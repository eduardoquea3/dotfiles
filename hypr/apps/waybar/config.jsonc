{
  "layer": "bottom",
  "position": "bottom",
  "height": 20,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["mpris"],
  "modules-right": [
    "network",
    "battery",
    "backlight",
    "pulseaudio",
    "clock",
    "clock#simpleclock",
    "tray",
    "custom/notification",
    "custom/power"
  ],
  "custom/spotify": {
    "format": "ÔÜº  {}",
    "return-type": "json",
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "spotifatius toggle-liked",
    "on-click-middle": "playerctl -p spotify next",
    "exec": "spotifatius monitor"
  },
  "mpris": {
    "player": "spotify",
    "dynamic-order": ["artist", "title"],
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "status-icons": {
      "paused": "ÔÅå"
    },
    "player-icons": {
      "default": "ÔÅã"
    }
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "active": "Û∞ÆØ",
      "default": "Û∞ä†"
    },
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false
  },
  "hyprland/window": {
    "format": "{title}"
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10
  },
  "clock#simpleclock": {
    "tooltip": false,
    "format": "ÔÄó {:%H:%M}"
  },
  "clock": {
    "format": "ÔÅ≥ {:L%a %d %b}",
    "tooltip": false,
    "on-click": "eww --config ~/.config/hypr/apps/eww open calendar",
    "on-click-right": "eww --config ~/.config/hypr/apps/eww close calendar"
  },
  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "‚ö° {capacity}%",
    "format-plugged": "üîå {capacity}%",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "tooltip": true
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["ÔÉÇ ", "ÔÅÇ ", "ÔÜÜ "],
    "on-scroll-up": "brightnessctl -e4 set 5%+",
    "on-scroll-down": "brightnessctl -e4 set 5%-",
    "on-click": "brightnessctl -e4 set 100%",
    "on-click-right": "brightnessctl -e4 set 10%"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶  muted",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    },
    "on-click": "pavucontrol"
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -p layer-shell &",
    "format": "‚èª"
  },
  "network": {
    "format-wifi": "<span color='#7fb4ca'>Ôá´ {essid}</span>",
    "format-ethernet": "<span color='#7fb4ca'>‚åõ {ifname}</span>",
    "format-disconnected": "<span color='#e46876'>! Disconnected</span>",
    "format-linked": "<span color='#e46876'>! {ifname} (No IP)</span>",
    "tooltip-format-wifi": "{ipaddr} ({signalStrength}%)",
    "tooltip-format-ethernet": "{ipaddr}",
    "on-click": "nm-connection-editor"
  },
  "custom/notification": {
    "escape": true,
    "exec": "swaync-client -swb",
    "exec-if": "which swaync-client",
    "format": "{icon}",
    "format-icons": {
      "none": "Û∞Ö∫",
      "notification": "Û∞°ü"
    },
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "return-type": "json",
    "tooltip": false
  }
}
